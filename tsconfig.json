{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "lib": ["es5", "es6", "es7", "es2017", "es2020"],
    "rootDirs": ["./"],
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "./",
    "./test"
  ],
  "exclude": [
    "test/coverage/",
    // "**/__tests__/*",
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config",
    "webpack",
    "jest"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
